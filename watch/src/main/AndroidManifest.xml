<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zywczas.myworkout.watch">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <application
        android:name=".BaseWatchApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyWatch">
        <activity
            android:name=".activities.trainingplan.day.presentation.DayActivity"
            android:exported="false" />
        <activity
            android:name=".activities.trainingplan.week.presentation.WeekActivity"
            android:exported="false" />
        <activity
            android:name=".activities.settings.days.presentation.SettingsDaysActivity"
            android:exported="false" />
        <activity
            android:name=".activities.settings.weeks.presentation.SettingsWeeksActivity"
            android:exported="false" />

        <service
            android:name=".services.timer.TimerService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".activities.trainingplan.timer.presentation.TimerActivity"
            android:exported="true"
            android:launchMode="singleTask" />
        <activity
            android:name=".activities.settings.timer.presentation.SettingsTimerActivity"
            android:exported="true" />
        <activity
            android:name=".activities.settings.main.presentation.SettingsMainActivity"
            android:exported="true" />
        <activity
            android:name=".activities.trainingplan.weekslist.presentation.WeeksListActivity"
            android:exported="true" />

        <uses-library
            android:name="com.google.android.wearable"
            android:required="true" />
        <!--
 todo sprawdzic
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity
            android:name=".activities.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>